<launch>

  <!-- 1) RPLIDAR -->
  <node pkg="rplidar_ros" type="rplidarNode" name="rplidarNode" output="screen">
    <param name="serial_port" value="/dev/ttyACM1"/>
    <param name="serial_baudrate" value="115200"/>
    <param name="frame_id" value="laser_frame"/>
    <param name="angle_compensate" value="true"/>
  </node>

  <!-- 2) TF: odom -> base_link (static for now) -->
  <node pkg="tf" type="static_transform_publisher" name="tf_odom_base"
        args="0 0 0 0 0 0 odom base_link 100" />

  <!-- 3) TF: base_link -> laser_frame -->
  <node pkg="tf" type="static_transform_publisher" name="tf_base_laser"
        args="0 0 0 0 0 0 base_link laser_frame 100" />

  <!-- 4) GMapping SLAM -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <remap from="scan" to="/scan"/>
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
  </node>

</launch>
